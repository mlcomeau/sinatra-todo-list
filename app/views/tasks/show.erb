<p class="flash"><%= flash[:message] %></p>

<h1><%= @task.name %></h1>
<br>
<% if authorized?(@task) %>
    <a href="/tasks/<%= @task.id %>/edit">Edit Task</a>

    <form action="/tasks/<%= @task.id %>/done" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="submit" value="This task is DONE.">
    </form>


    <br><br>
    <form action="/tasks/<%= @task.id %>" method="post" onSubmit="return confirm('Are you sure you wish to delete this task?')">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
    </form>
    <br><br>
<% end %>
