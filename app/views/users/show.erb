<div>
<h1><u>Hello, <%= @user.username %>!</u></h1>
<br><br>
<p class="flash"><%= flash[:message] %></p>

<h3>Your In Progress Tasks:</h3>
<% Task.all.each do |task|%>
<% if task.user_id == current_user.id && task.status == "in progress" %>
<a href="/tasks/<%= task.id %>"><%= task.name %></a><br><br>
<!-- have edit button, maybe a pencil image, would render the task edit form 
     have delete button, maybe a garbage can image, would display a warning and then destroy task  -->
<% end %>
<% end %>

<br><br><br>

<h3>Your DONE Tasks:</h3>
<% Task.all.each do |task|%>
<% if task.user_id == current_user.id && task.status == "done" %>
<s><%= task.name %></s><br>

<% end %>
<% end %>

<p><a href="/logout">Log Out.</a></p>

</div>